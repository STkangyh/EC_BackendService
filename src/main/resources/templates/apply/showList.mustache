{{>components/header}}

<style>
    .table a {
        text-decoration: none; /* Remove underline */
    }
</style>

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">이름</th>
        <th scope="col">상태</th>
        <th scope="col">전화번호</th>
        <th scope="col">지원시간</th>
    </tr>
    </thead>
    <tbody>
    <!-- Entity를 가져오기 -->
    {{#applyList}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/applies{{id}}" class="fw-bold text-success">{{name}}</a></td> <!-- Bootstrap class for bold text -->
            <td>{{state}}</td>
            <td>{{phoneNumber}}</td>
            <td>{{createTime}}</td>
        </tr>
    {{/applyList}}
    </tbody>
</table>

{{>components/footer}}